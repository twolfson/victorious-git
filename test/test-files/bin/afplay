#!/usr/bin/env bash
# Exit upon first failure (aka first failing test)
set -e

# If there is no environment variable set for us, complain and leave
if test "$VICTORIOUS_GIT_AFPLAY_CONTENT" = ""; then
  echo "To properly test \`victorious-git\`, we require VICTORIOUS_GIT_AFPLAY_CONTENT to be set." 1>&2
  echo "Please set it via \`export VICTORIOUS_GIT_AFPLAY_CONTENT=\"{{content}}\"" 1>&2
  exit 1
fi

# Output our content to a file
echo "$VICTORIOUS_GIT_AFPLAY_CONTENT" > afplay.out
